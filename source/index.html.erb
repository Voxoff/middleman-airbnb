<%= partial "layouts/banner" %>
<div class="cards-container">
  <div class="row">
    <% data.cities.each do |city| %>
      <div class="col-md-4">
        <div class="card" style="background-image:linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= city.picture %>);">
          <h2 class="card-category"><%= city.name %></h2>
          <p class="card-description"><%= city.price %></p>
        </div>
          <img src="https://kitt.lewagon.com/placeholder/users/tgenaitay" class="card-user">
          <a class="card-link" href="#" ></a>
      </div>
    <% end %>
  </div>
</div>

